.container image {
  width: 100%;
  height: 280px; }

.content {
  width: 100%; }
  .content .card {
    width: 80%;
    min-height: 300px;
    border-radius: 5px;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.12);
    position: relative;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.8);
    top: -30px;
    font-size: 12px; }
    .content .card .title {
      text-align: center;
      color: #999;
      line-height: 30px; }
    .content .card .date {
      margin-top:5px;
      text-align: center;
      color: #999;
      padding: 10px; }
      .content .card .date .day {
        color: #333;
        font-size: 20px; }
    .content .card .card-content {
      color:#828282;
      font-size:13px;
      line-height:2.0;
      padding:8px 15px;
      font-family:Open Sans;
     }
      .content .card .card-author {
      float: right;
      padding:0 15px;
      color:#828282;
      font-size:13px;
      font-family:Open Sans;
      line-height:2.0;
     }
     .content .card .hr {
      float: right;
      padding:15px 50px;
      color:#F4F4F4;
      font-size:13px;
      font-family:Open Sans;
      line-height:2.0;
     }